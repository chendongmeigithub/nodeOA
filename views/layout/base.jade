//- base layout
include ../include/mixin.jade
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        meta(content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport")
        meta(content="yes" name="apple-mobile-web-app-capable")
        meta(content="black" name="apple-mobile-web-app-status-bar-style")
        meta(content="telephone=no" name="format-detection")
        meta(content="email=no" name="format-detection")
        meta(name="apple-mobile-web-app-title" content="首页")
        block seo
        block title
        +styles(['public/libs/Flat-UI/css/vendor/bootstrap/css/bootstrap.min.css', 'public/libs/Flat-UI/css/flat-ui.min.css'])
        block style
    block body
    body(class="#{bodyClass}")
        block main
        <!--[if lt IE 9]>
        +scripts(['public/libs/Flat-UI/js/vendor/html5shiv.js', 'public/libs/Flat-UI/js/vendor/respond.min.js'])
        <![endif]-->
        block script