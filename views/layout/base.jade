//- base layout
include ../include/mixin.jade
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        meta(content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport")
        block seo
        block title
        +styles(['/libs/bootstrap/css/bootstrap.min.css'])
        block style
    block body
    body(class="#{bodyClass}")
        block main
        <!--[if lt IE 9]>
        +scripts(['/libs/jquery/jquery.js', '/libs/bootstrap/js/bootstrap.js'])
        <![endif]-->
        block script